<!DOCTYPE html>
<html>
  	<head>
	   <title><%= full_title(yield(:title)) %></title>
	   <meta charset="utf-8">
	   <%= csrf_meta_tags %>
		<%= stylesheet_link_tag 'application', media: 'all',
		'data-turbolinkstrack': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinkstrack': 'reload' %>
	 <%= render 'layouts/shim' %>
  	</head>
  <body>
    	<%= render 'layouts/header' %> 	
	   	
	  	<div class="container">
	  		<% flash.each do |message_type, message| %>
        		<div class="alert alert-<%= message_type %>"><%= message %></div>
      		<% end %>
	    	<%= yield %>
	    	
	  	</div>
  </body>
</html>